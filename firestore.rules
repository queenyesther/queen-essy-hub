rules_version = '2';

// Copy these rules into the Firebase Console:
// Firebase Console > Firestore Database > Rules tab > paste & publish

service cloud.firestore {
  match /databases/{database}/documents {

    // Posts: any authenticated user can read, create, and update (like/comment)
    // Only the post author can delete
    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null
                    && resource.data.authorId == request.auth.uid;
    }

    // Gallery: users can only read their own images
    // Only the uploader can delete
    match /gallery/{imageId} {
      allow read: if request.auth != null
                  && resource.data.uploadedBy == request.auth.uid;
      allow create: if request.auth != null;
      allow delete: if request.auth != null
                    && resource.data.uploadedBy == request.auth.uid;
    }

    // User profiles: anyone can read, only the owner can write
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.auth.uid == userId;
    }
  }
}
